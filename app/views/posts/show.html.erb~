<%= render :partial => @post %>

<h2>Comments</h2>
<div id="comments">
<%= render :partial => @post.comments.reverse %>
</div>

<%= form_for [@post, Comment.new], :remote => true do |f| %>
<p>
<%= f.label :body, "New Comment" %><br />
<%= f.text_area :body %><br />
<%= f.label :author, "Author" %><br />
<%= f.text_area :author %>
</p>
<p><%= f.submit "Add Comment" %></p>
<% end %>
